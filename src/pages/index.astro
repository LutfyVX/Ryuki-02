---
import MainLayout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import SocialLinks from '../components/social.astro';
import NewsItem from '../components/post.astro';
import ProjectCard from '../components/project.astro';
import { projects } from '../data/projects.ts';


import '../styles/global.css';


const newsItems = [
	{
		date: "Feb 26, 2025",
		title: "Prabowo Resmikan Danantara, Bos Bank Mandiri Ungkap Dampaknya",
		url: "https://www.cnbcindonesia.com/market/20250226071006-17-613674/prabowo-resmikan-danantara-bos-bank-mandiri-ungkap-dampaknya"
	},
	{
		date: "Feb 26, 2025",
		title: "Korupsi Pertamina 2018-2023, Pertalite Dioplos Jadi Pertamax",
		url: "https://nasional.kompas.com/read/2025/02/26/07132731/skandal-korupsi-pertamina-2018-2023-pertalite-dioplos-jadi-pertamax?page=all"
	}
];


---

<MainLayout title="Lutfi | Hello!">
	<Header slot="header" />

	<section class="font-mono my-8">
		<h1 class="text-3xl font-medium mb-2 font-mono">Hi, I'm</h1>
		<div class="mb-6">
			<div class="mb-6">
				<p class="my-1 font-mono">(id) Naufal Lutfi</p>
				<p class="my-1 font-mono">(jp) ナウファル・ルトフィ</p>
				<p class="my-1 font-mono">(en) Lutfi's</p>
				<p class="my-1 font-mono">(he/him)</p>
			</div>
		</div>
		
		<p class="font-mono text-lg leading-relaxed">
			An Student From SMK TARUNA BHAKTI Who Likes Coding, Watching Anime, and Playing Games.
		</p>
	</section>
	
	<SocialLinks />
	
	<section class="font-mono my-12">
		<h2 class="text-2xl font-medium mb-6 font-mono">News</h2>
		{newsItems.map(item => (
			<NewsItem 
				date={item.date} 
				title={item.title} 
				url={item.url}
			/>
		))}
	</section>
	
	
	<section class="my-12">
		<h2 class="text-2xl font-medium mb-6 font-mono">Projects</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			{projects.map(project => (
				<div class="font-mono">
					<a href={project.href} target="_blank" rel="noopener noreferrer">
						<ProjectCard
							title={project.title}
							description={project.description}
							image={project.image} 
						/>
					</a>
				</div>
			))}
		</div>
	</section>

	
	<Footer slot="footer" />
</MainLayout>