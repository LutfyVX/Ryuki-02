	}
];

const projects = [
	{
		title: "Kobokan",
		description: "Aku Sayang KOBO!"
	},
	{
		title: "Lorem Ipsum",
		description: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officia!"
	},
	{
		title: "Lorem Ipsum",
		description: "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ex magnam facilis molestiae, iusto repudiandae at laboriosam, molestias aut neque repellat nulla adipisci architecto voluptatibus iste, incidunt eveniet totam ad nemo."
