---

<script src="/src/scripts/themeToggle.js" is:beforeinteractive></script>


<MainLayout title="Lutfi | Hello!">
	<Header slot="header" />

	<section class="font-mono my-8">
		<h1 class="text-3xl font-medium mb-2 font-mono">Hi, I'm</h1>
		<div class="mb-6">
			<div class="mb-6">
				<p class="my-1 font-mono">(id) Naufal Lutfi</p>
				<p class="my-1 font-mono">(jp) ナウファル・ルトフィ</p>
				<p class="my-1 font-mono">(en) Lutfi's</p>
				<p class="my-1 font-mono">(he/him)</p>
			</div>
		</div>

		<DecryptedText Text='Your text here' />
		
		<p class="font-mono text-lg leading-relaxed">
			An Student From SMK TARUNA BHAKTI Who Likes Coding, Watching Anime, and Playing Games.
		</p>
	</section>
	
	<SocialLinks />
	
	<section class="font-mono my-12">
		<h2 class="text-2xl font-medium mb-6 font-mono">News</h2>
		{newsItems.map(item => (
			<NewsItem 
				date={item.date} 
				title={item.title} 
				url={item.url}
			/>
		))}
	</section>
	
	
	<section class="my-12">
		<h2 class="text-2xl font-medium mb-6 font-mono">Projects</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			{projects.map(project => (
				<div class="font-mono">
					<ProjectCard
						title={project.title}
						description={project.description}
					/>
				</div>
			))}
		</div>
	</section>
	
	<section class="my-12">
		<h2 class="text-2xl font-medium mb-6 font-mono">Friends :3</h2>
		<div class="flex gap-4 flex-wrap">
			{friends.map(friend => (
				<img src={friend.image} alt={friend.name} class="w-24 h-24 rounded-full object-cover font-mono" />
			))}
		</div>
	</section>
	
	<Footer slot="footer" />
</MainLayout>